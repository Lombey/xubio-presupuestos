        "cotizacion": {"type": "number"},
        "importetotal": {"type": "number"},
        "importeImpuestos": {"type": "number"},
        "importeGravado": {"type": "number"},
        "descripcion": {"type": "string"},
        "transaccionProductoItems": {
          "type": "array",
          "items": {"$ref": "#/definitions/TransaccionProductoItems"}
        }
      }
    },
    "ClienteBeanSelector": {
      "type": "object",
      "properties": {
        "clienteid": {"type": "integer", "format": "int64"},
        "nombre": {"type": "string"},
        "razonSocial": {"type": "string"},
        "cuit": {"type": "string"}
      }
    },
    "PuntoVentaBeanSelector": {
      "type": "object",
      "properties": {
        "puntoVentaId": {"type": "integer", "format": "int64"},
