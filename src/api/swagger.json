  "definitions": {
    "PresupuestoBean": {
      "type": "object",
      "properties": {
        "transaccionId": {"type": "integer", "format": "int64"},
        "cliente": {"$ref": "#/definitions/ClienteBeanSelector"},
        "fecha": {"type": "string", "format": "date", "example": "2024-01-15"},
        "fechaVto": {"type": "string", "format": "date", "example": "2024-02-15"},
        "puntoVenta": {"$ref": "#/definitions/PuntoVentaBeanSelector"},
        "numeroDocumento": {"type": "string"},
        "condicionDePago": {"type": "integer", "description": "1=Cuenta Corriente, 2=Contado"},
