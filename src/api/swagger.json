        "codigo": {"type": "string"}
      }
    },
    "MonedaBean": {
      "type": "object",
      "properties": {
        "ID": {"type": "integer", "format": "int64"},
        "nombre": {"type": "string"},
        "codigo": {"type": "string"},
        "simbolo": {"type": "string"}
      }
    },
    "TransaccionProductoItems": {
      "type": "object",
      "properties": {
        "productoVenta": {"$ref": "#/definitions/ProductoVentaBeanSelector"},
        "cantidad": {"type": "number"},
        "precioUnitario": {"type": "number"},
        "bonificacion": {"type": "number"},
        "descripcion": {"type": "string"}
      }
    },
    "ProductoVentaBeanSelector": {
      "type": "object",
      "properties": {
        "productoid": {"type": "integer", "format": "int64"},
        "nombre": {"type": "string"},
        "codigo": {"type": "string"}
      }
    }
